{
    "manifest_version": 3,
    "name": "QbitFix",
    "version": "1.0",
    "description": "Заміняє вміст <th> у таблиці на порядковий номер, а також оновлює текст посилання у таблиці /problems.",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://qbit.dots.org.ua/standings",
        "https://qbit.dots.org.ua/problems"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://qbit.dots.org.ua/standings*",
                "https://qbit.dots.org.ua/problems*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
